@model GBKingdom.Models.Review

@{
    ViewData["Title"] = "Admin - Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Admin Edit Review</h1>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => Model.ReviewId)
    @Html.HiddenFor(model => Model.ProductId)

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input class="form-control" asp-for="Author">
    </div>

    <div class="form-group">
        <label asp-for="Stars">Stars</label>
        <input class="form-control" type="number" asp-for="Stars">
    </div>

    <div class="form-group">
        <label asp-for="Body">Review:</label>
        <input class="form-control" asp-for="Body">
    </div>
    <input type="submit" value="Edit" class="btn btn-info" />
}