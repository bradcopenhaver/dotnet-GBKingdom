@model GBKingdom.Models.Product

@{
    ViewData["Title"] = "Admin - Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Admin Edit @Model.Name Details</h1>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model =>Model.ProductId)

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input class="form-control" type="number" asp-for="Price">
    </div>

    <div class="form-group">
        <label asp-for="OriginCountry">Country of Origin</label>
        <input class="form-control" asp-for="OriginCountry">
    </div>
    <input type="submit" value="Edit" class="btn btn-info" />
}