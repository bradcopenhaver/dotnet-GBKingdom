@model GBKingdom.Models.Product

@{
    ViewData["Title"] = "Admin - Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Admin Delete Product: @Model.Name </h1>
<h2>Are you sure you want to delete this product and all of its reviews?</h2>

<h5>Product Name: @Model.Name</h5>
<h5>Country of Origin: @Model.OriginCountry</h5>
<h5>Price: @Model.Price</h5>
<p>With @Model.Reviews.Count reviews.</p>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete" class="btn btn-danger" />
}